<h2>Claims</h2>

<dl>
    @{var tmp = System.Security.Claims.ClaimsPrincipal.Current;}

    @foreach (var claim in User.Claims) {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Roles</h2>

<dl>
    @foreach (var claim in User.Claims.Where(x => x.Type == IdentityModel.JwtClaimTypes.Role)) {
        <dt>@claim.Type</dt>
        <dd>@claim.Value : @claim.Issuer : @claim.OriginalIssuer </dd>
    }
</dl>
